<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.example.controllers.SignupController"
          hgap="10" vgap="10" stylesheets="@style.css">
    <Label text="Inscription" GridPane.columnSpan="2" styleClass="header-label"/>
    <Label text="Nom:"    GridPane.rowIndex="1"/> <TextField fx:id="nomField"    GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Prénom:" GridPane.rowIndex="2"/> <TextField fx:id="prenomField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text="Email:"  GridPane.rowIndex="3"/> <TextField fx:id="emailField"  GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label text="Téléphone:" GridPane.rowIndex="4"/> <TextField fx:id="phoneField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Label text="Mot de passe:"    GridPane.rowIndex="6"/> <PasswordField fx:id="passwordField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    <Label text="Confirmer mdp:"   GridPane.rowIndex="7"/> <PasswordField fx:id="confirmField"  GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    <Button text="S'inscrire" onAction="#handleSignup" GridPane.rowIndex="8" GridPane.columnSpan="2"/>
    <Label fx:id="messageLabel" textFill="red" GridPane.rowIndex="9" GridPane.columnSpan="2"/>
</GridPane>
